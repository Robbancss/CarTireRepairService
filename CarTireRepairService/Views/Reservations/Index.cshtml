@using X.PagedList.Mvc.Core
@using X.PagedList;
@model IPagedList<DateTime>

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewData["Title"] = "Available Reservations";
}

<h1>Available Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => DateTime.Now.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item
                </td>
                <td>
                    |
                </td>
                <td>
                    <a asp-controller="Reservations" asp-action="Create"
                       asp-route-chosenDateTime="@item.ToString("yyyMMddHHmmss")"
                       asp-route-id="@ViewBag.ID"
                       asp-route-serviceType="@ViewBag.ServiceType"
                       >Reserv it for me</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
